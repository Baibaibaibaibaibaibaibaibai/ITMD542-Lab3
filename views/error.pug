extends layout

block content
  div(class="flex flex-col items-center justify-center min-h-screen py-8 bg-gray-100")
    h1(class="text-2xl font-bold text-red-600 mb-2")= message
    h2(class="text-xl text-red-500 mb-4")= error.status
    pre(class="text-gray-800 bg-white p-4 rounded-lg shadow max-w-xl overflow-auto") #{error.stack}
